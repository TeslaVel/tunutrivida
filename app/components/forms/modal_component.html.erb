<!-- Modal Component -->
<div class="modal fade" id="<%= id_modal %>" tabindex="-1" role="dialog" aria-labelledby="<%= id_modal %>Title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="<%=id_modal %>Title"><%= title %></h5>
        <% if secondary_actions[:action].present? %>
        <button type="button" class="close" onclick="<%= secondary_actions[:action] %>" aria-label="Close">
        <% else %>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <% end %>
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= content %>
      </div>
        <div class="modal-footer">
          <% if secondary_actions.present? %>
            <% if secondary_actions[:action].present? %>
              <button type="button" class="btn btn-secondary" onclick="<%= secondary_actions[:action] %>"><%= secondary_actions[:name] %></button>
            <% else %>
              <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= secondary_actions[:name] %></button>
            <% end %>
          <% end %>

          <% if primary_actions.present? %>
            <% if primary_actions[:component].present? %>
               <%= render primary_actions[:component]  %>
            <% else %>
              <button type="button" class="btn btn-primary" onclick="<%= primary_actions[:action] %>"><%= primary_actions[:name] %></button>
            <% end %>
          <% end %>
        </div>
    </div>
  </div>
</div>