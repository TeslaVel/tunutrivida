<div class="table-responsive" id="<%= table_component_id %>">
  <table class="table <%= table_class%>">
    <thead>
      <tr>
        <% header_fields.each do |head| %>
          <%= render_header(head) %>
        <% end %>
        <% if show_colum_actions %>
          <th class="text-center" width="10%"><%= t('actions') %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% row_objects.each do |row| %>
        <%= render_row(row) %>
      <% end %>
    </tbody>
  </table>
</div>