<%= render Elements::Card::CardComponent.new(
    header_tabs: [
      { label: 'BMR Factor Info', target: '#info' },
    ],
    extra_item_options: [
      { element: ->() {
        link_to 'Edit', edit_bmr_factor_path(@bmr_factor)
      }}
    ],
    card_class: '',
    card_body_class: 'tab-content p-2',
    card_component_id: 'billings_info_component'
  ) do %>
    <div id="info" class="tab-pane active" role="tabpanel">
      <%= render Elements::TableShowComponent.new(
        row_object: @bmr_factor,
        table_alias: @bmr_factor.model_name.to_s.downcase,
        table_class: 'table-borderless',
        row_fields: [
          { field: :name, classes: 'text-primary-400' },
          { field: :base_value, classes: 'text-primary-400' },
          { field: :base_height, classes: 'text-primary-400' },
          { field: :base_weight, classes: 'text-primary-400' },
          { field: :base_age, classes: 'text-primary-400' },
          { field: 'gender.name', label: 'gender', classes: 'text-primary-400' },
          { field: :position, classes: 'text-primary-400' },
          { field: :source, classes: 'text-primary-400' },
          { field: 'created_by.full_name', label: 'created_by', classes: 'text-primary-400' },
        ]
      )%>
    </div>
  <% end %>
  <div class="d-flex col-12 align-items-center justify-content-center my-2">
    <%= link_to 'Back', bmr_factors_path, class: "text-primary-700" %>
  </div>