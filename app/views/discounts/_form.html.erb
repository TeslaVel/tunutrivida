<div class="col-xs-12 col-sm-10 col-md-8 col-lg-6 mx-auto">
  <%= render Forms::FormComponent.new(
      scope_instance: @discount,
      is_row: true,
      data_type: { type: :json },
      html_options: { id:"discount_form_id", class: 'form', remote: false},
      action_buttons: {},
      fields: [
        { type: 'text', name: :name, label: :name, value: @discount.name },
        { type: 'text', name: :description, label: :description, value: @discount.description },
        {
          type: 'select', name: :item_type, label: 'Billing Item',
          collection: {
            data: Discount::DiscountTypes,
            selected: @discount.discount_type.to_sym
          },
        },
        {
          type: 'text', name: :amount, label: :amount, value: @discount.amount,
        }
      ]
  ) %>
</div>