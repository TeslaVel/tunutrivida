<div class="col-xs-12 col-sm-10 col-md-8 col-lg-6 mx-auto">
  <%= render Forms::FormComponent.new(
      scope_instance: condition,
      is_row: true,
      data_type: { type: :json },
      html_options: { id:"condition_form_id", class: 'form', remote: false},
      action_buttons: {
      },
      fields: [
        { type: 'text', name: :name, label: :name, value: condition.name },
        { type: 'text', name: :description, label: :description, value: condition.description },
      ]
  ) %>
</div>