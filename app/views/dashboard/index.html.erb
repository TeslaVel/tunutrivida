<div class="col-12">
  <div class="d-flex align-items-center justify-content-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
  </div>

  <div class="d-flex <%= device == 'mobile' ? 'flex-column' : 'flex-row' %> justify-content-around col-12 " style="gap: 15px;">
    <div class="card col-12 col-sm-6">
      <!-- Card Header - Dropdown -->
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-transparent">
        <h6 class="m-0 font-weight-bold text-primary">Incoming Appointments</h6>
      </div>
      <!-- Card Body -->
      <div class="card-body">
        <% @appointments.each do |appointment| %>
          <span class="d-block">
            <%= link_to appointment_path(appointment) do %>
              <i class="fa fa-phone  c-green"></i>
              <%= "[#{appointment.time_start.strftime("%H:%M %p")} - #{appointment.time_end.strftime("%H:%M %p")}] - [#{appointment.start_date}] #{appointment.patient.first_name}" %>
            <% end %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="card col-12 col-sm-6">
      <!-- Card Header - Dropdown -->
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-transparent">
        <h6 class="m-0 font-weight-bold text-primary">Tasks</h6>
      </div>
      <!-- Card Body -->
      <div class="card-body">
        Tasks
      </div>
    </div>
  </div>
</div>