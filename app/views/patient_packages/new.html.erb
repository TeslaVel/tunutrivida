<h1><%= t("patient_packages.new_package") %></h1>
<div class="row w-40 m-auto">

  <%= simple_form_for(@patien_package, url: patient_package_create_path(@patient)) do |f| %>

    <%= notice %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


    <div class="form-group">
      <%= f.input :date, as: :date, html5: true, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= f.input :package_id, collection: @packages, label_method: :name, value_method: :id,name: "Package", include_blank: false, selected: {}, input_html: { class: "form-control"} %>
    </div>

    <div class="d-flex justify-content-center align-items-center form-group">
      <%= f.button :submit, t(".agregate_package"), class: "btn btn-primary" %>
      <%= link_to t('patient_packages.back'), patient_path(@patient) %>
    </div>

  <% end %>
</div>