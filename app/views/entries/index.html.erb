<div class="d-flex flex-column align-items-center">
  <% @entries.each do |entry| %>
    <div class="col-sm-12 col-md-12 col-lg-8 col-xl-6 p-0 mb-6">
      <%= link_to entry_path(entry), class: 'text-decoration-none' do %>
      <div class="card mb-4 py-2 bg-secondary-100 border-bottom-primary-500 text-primary-600">
        <div class="p-0 px-2 pb-2 pt-1 text-center"><%= entry.user.full_name %> </div>
        <% if entry.image.present? %>
          <div class="card-header bg-transparent">
            <%= image_tag entry.image, width: '100%', height: 300, style: 'background-size: cover;background-position: center center;height: 300px;width: 100%;' %>
          </div>
        <% end %>
        <div class="card-body mx-0 px-3 py-2">
          <%= entry.description %>
        </div>
        <div class="card-footer py-1 px-2 border-0 bg-transparent border-top-none">
          <div class="d-flex justify-content-end">
            <div class="f-size-12">
                Comments: (<%= entry.comments.length %>)
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</div>


