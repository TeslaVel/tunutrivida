<h1>Roles</h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t('roles.name')%></th>
      <th><%= t('roles.description')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= role.description %></td>
        <td><%= link_to t('roles.show'), role %></td>
        <td><%= link_to t('roles.edit'), edit_role_path(role) %></td>
        <td><%= link_to t('roles.delete'), role, method: :delete, data: { confirm: t('roles.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('roles.new_role'), new_role_path , class: "btn btn-success" %>
