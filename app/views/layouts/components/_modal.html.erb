<!-- Modal -->
<div class="modal fade" id="<%= id_modal %>" tabindex="-1" role="dialog" aria-labelledby="<%= id_modal %>Title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="<%= id_modal %>LongTitle"><%= title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= capture do %>
          <%= yield %>
        <% end %>
      </div>
      <% if action_call %>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" onclick="<%= action_call %>"><%= action_name %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>
